@model IEnumerable<Tag>

@{
    ViewData["Title"] = "Tags";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1> Tags</h1>
    </div>
</div>

<form method="get">
    <div class="container mt-4">
        <div class="row">
            <div class="col-6">
                <input type="text" class="form-control" value="@ViewBag.SearchQuery" name="searchQuery" placeholder="Search" />
                <button class="btn btn-primary mt-4" type="submit">Search</button>
            </div>
        </div>
    </div>
</form>

@if (Model is not null && Model.Any())
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Tag ID</th>
                <th scope="col">Tag Name</th>
                <th scope="col">Tag Display Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tag in Model)
            {
                <tr class="table-default">

                    <td scope="row">@tag.ID</td>
                    <td>@tag.Name</td>
                    <td>@tag.DisplayName</td>
                    <td>
                        <div class=" btn-group flex-row">
                            <a asp-action="Edit" asp-route-id="@tag.ID" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@tag.ID" class=" btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <strong> No Tags Found</strong>
}