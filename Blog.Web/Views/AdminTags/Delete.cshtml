@{
    ViewData["Title"] = "Delete Tag";
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Delete Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form asp-action="Delete" method="post">
        <div>
            <label asp-for="ID" class="form-label mt-4"></label>
            <input asp-for="ID" class="form-control" disabled />
        </div>
        <div>
            <label asp-for="Name" class="form-label mt-4"></label>
            <input asp-for="Name" class="form-control"disabled/>
        </div>
        <div>
            <label asp-for="DisplayName" class="form-label mt-4"></label>
            <input asp-for="DisplayName" class="form-control" disabled />
        </div>
        <div class="mt-2 d-flex gap-2">
            <button type="submit" class="btn btn-danger flex-fill" >Delete</button>
            <a asp-action="Index" class="btn btn-success flex-fill">Cancel</a>
        </div>
    </form>

</div>