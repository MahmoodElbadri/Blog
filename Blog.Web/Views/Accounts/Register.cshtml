@model RegisterVM
@{
    ViewData["Title"] = "Register to Our Blog";
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <h1 class="mt-3 mb-3 h3">Register</h1>
            <div class="mb-3">
                <form method="post" asp-action="Register">
                    <fieldset>
                        <div>
                            <label asp-for="UserName" class="form-label mt-4"></label>
                            <input type="text" class="form-control" asp-for="UserName" placeholder="Enter User Name">
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                        <div>
                            <label asp-for="Email" class="form-label mt-4">Email address</label>
                            <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small><br />
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div>
                            <label asp-for="Password" class="form-label mt-4">Password</label>
                            <input type="password" class="form-control" asp-for="Password" placeholder="Password" autocomplete="off">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="btn-group mt-3 col-12 flex-row">
                            <button type="submit" class="btn col-6 btn-primary">REGISTER</button>
                            <a asp-action="Index" asp-controller="Home" class="btn col-6 btn-danger">BACK</a>
                        </div>
                    </fieldset>
                </form>
                </<div>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />